@** Definir a classe de modelo desta página *@
@model AgendaContatos.Presentation.Models.AccountLoginModel

@{
    //Define a página de layaut que será herdada
    Layout = "~/Views/Shared/AccountLayout.cshtml";
}

<div class="row mt-5">
    <div class="col-md-4 offset-md-4">
        <div class="card">
            <div class="card-body">
                <div class="text-center">
                    <img src="coti.png" class="img-fluid" alt="Logo da Coti Informatica - Escola de Nerds">
                    <h3 class="text-primary">Agenda de Contatos</h3>
                    <h5>Acesso ao Sistema</h5>
                </div>
                <hr/>

                <div class="text-danger text-center">
                    <strong>@TempData["Mensagem"]</strong>
                </div>
                @using (Html.BeginForm())
                {
                        <div class="mb-2">
                            <label>Email de acesso:</label>
                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control"})
                            <span class="text-danger">
                            @Html.ValidationMessageFor(model => model.Email)
                            </span>
                        </div>
                        <div class="mb-2">
                            <label>Senha de acesso:</label>
                        @Html.PasswordFor(model => model.Senha, new { @class = "form-control"})
                                <span class="text-danger">
                            @Html.ValidationMessageFor(model => model.Senha)
                                </span>
                            <div class="text-end">
                                <a href="/Account/PasswordRecover">
                                    Esqueci minha senha?
                                </a>
                            </div>
                        </div>
                        <div class="mb-2 d-grid">
                            <input type="submit" value="Acessar Agenda" class="btn btn-success"/>
                        </div>
                        <div class="mb-2 d-grid">
                            <a href="/Account/Register" class="btn btn-primary">
                                Não possui conta? <strong>Cadastre-se aqui!</strong>
                            </a>
                        </div>
                }
            </div>
        </div>
    </div>
</div>