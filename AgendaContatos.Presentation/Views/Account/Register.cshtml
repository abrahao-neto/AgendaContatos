@** Definir a classe de modelo desta página *@
@model AgendaContatos.Presentation.Models.AccountRegisterModel

@{
    //Define a página de layaut que será herdada
    Layout = "~/Views/Shared/AccountLayout.cshtml";
}

<div class="row mt-3">
    <div class="col-md-4 offset-md-4">
        <div class="card">
            <div class="card-body">
                <div class="text-center">
                    <h1>Crie sua conta de acesso</h1>
                    <h5>Preencha o formulário para realizar o seu cadastro</h5>
                </div>
                <hr/>

                <div class="text-center mb-2">
                    <strong>@TempData["Mensagem"]</strong>
                </div>

                @using (Html.BeginForm())
                {
                        <div class="mb-2">
                            <label>Nome do usuário:</label>
                        @Html.TextBoxFor(model => model.Nome, new { @class = "form-control" })
                                <span class="text-danger">
                            @Html.ValidationMessageFor(model => model.Nome)
                            </span>
                        </div>
                        <div class="mb-2">
                            <label>Email de acesso:</label>
                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
                            <span class="text-danger">
                            @Html.ValidationMessageFor(model => model.Email)
                            </span>
                            <span class="text-danger"> 
                                <strong>@TempData["ErroEmail"]</strong>
                            </span>
                        </div>
                        <div class="mb-2">
                            <label>Senha de acesso:</label>
                        @Html.PasswordFor(model => model.Senha, new { @class = "form-control" })
                            <span class="text-danger">
                            @Html.ValidationMessageFor(model => model.Senha)
                            </span>
                        </div>
                        <div class="mb-2">
                            <label>Confirme sua senha:</label>
                        @Html.PasswordFor(model => model.SenhaConfirmacao, new { @class = "form-control" })
                            <span class="text-danger">
                            @Html.ValidationMessageFor(model => model.SenhaConfirmacao)
                            </span>
                        </div>
                        <div class="mb-2 d-grid">
                            <input type="submit" value="Realizar Cadastro" class="btn btn-success"/>
                        </div>
                        <div class="mb-2 d-grid">
                                <a href="/Account/Login" class="btn btn-primary">
                                Já possui conta? <strong>Acesse aqui!</strong>
                            </a>
                        </div>
                }
            </div>
        </div>
    </div>
</div>